@model IEnumerable<Prikhodko.NewsWebsite.Web.Models.PostViewModel>


<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <h2>
                        @Model.Count() results found @*for: <span class="text-navy">"Bootdey"*@</span>
                    </h2>
                    <div class="search-form">
                        <div class="input-group">
                            <div>
                                <input id="tag_search_input" class="form-control form-control-lg form-control-borderless" type="search" placeholder="Search topics or keywords">
                            </div>
                            <div class="input-group-btn">
                                <input class="btn btn-lg btn-primary" type="button" onclick="location.href = '/search/tag?tagText=' + $('#tag_search_input').val()" value="Search" />
                            </div>
                        </div>
                    </div>

                    <div style="margin-top: 10px" id="searchresults" class="container">
                        @foreach (var post in Model)
                        {
                            var postId = "post" + post.Id;
                            <div id="@postId" class="search-result">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h3>
                                            <a href="/post/details/@post.Id">
                                                @post.Title
                                            </a>
                                        </h3>
                                    </div>
                                    <div class="col-md-4">
                                        <h3>
                                            <a href="/users/details?name=@post.AuthorName">@post.AuthorName</a>
                                        </h3>
                                    </div>
                                </div>
                                <p>
                                    @post.Description
                                </p>
                                <div class="row">
                                    <div class="col-md-2">
                                        @foreach (var tag in post.Tags)
                                        {
                                            <span class="glyphicon glyphicon-tag" style="color: gray">@tag</span>
                                        }
                                    </div>
                                    <div class="col-md-2">
                                        <span>@post.Created</span>
                                    </div>
                                    <div class="col-md-offset-2 col-md-2">
                                        @if (post.AvgRate == null)
                                        {
                                            <span>No average rate so far</span>
                                        }
                                        else
                                        {
                                            <span class="glyphicon glyphicon-star">@post.AvgRate</span>
                                        }
                                    </div>
                                    <div class="col-md-2">
                                        <span>@post.Comments.Count comments</span>
                                    </div>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                        }
                        <div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*<div class="col-lg-2">
            @Html.Action("GetUserBar", "Users")
        </div>*@
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/typeahead.js"></script>

    <script>
    var tags = new Bloodhound({
        datumTokenizer: Bloodhound.tokenizers.whitespace,
        queryTokenizer: Bloodhound.tokenizers.whitespace,
        prefetch: {
            url: "@Url.Action("Index", "Tags")"
        }
    });
        tags.clearPrefetchCache();
            tags.initialize();

    $('#tag_search_input').typeahead({
            hint: true,
            highlight: true,
                minLength: 1,
                maxLength: 1
            },
            {
                name: 'tags',
                source: tags
            });
    </script>
}
