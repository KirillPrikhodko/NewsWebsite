@model Prikhodko.NewsWebsite.Service.Contracts.Models.CommentServiceModel

<div style="border:1px solid black;">
    <div class="row">
        <a href=@Url.Action("/Account/Details" + @Model.AuthorId)>@ViewBag.Username</a>
    </div>
    <div class="row container">
        <div class="col-md-10">
            @Model.Content
        </div>
        <div class="col-md-2">
            Rating: @Model.LikesCount
        </div>
    </div>
</div>
