@model Prikhodko.NewsWebsite.Service.Contracts.Models.UserServiceModel

@if (Context.User.IsInRole("Admin"))
{
    <table id="users" style="margin-top: 15px" class="w3-table-all">
        <tr>
            <th onclick="w3.sortHTML('#posts', '.item', 'td:nth-child(1)')" style="cursor:pointer">Username</th>
            <th onclick="w3.sortHTML('#posts', '.item', 'td:nth-child(2)')" style="cursor:pointer">Writer</th>
            <th onclick="w3.sortHTML('#posts', '.item', 'td:nth-child(3)')" style="cursor:pointer">Admin</th>
            <th onclick="w3.sortHTML('#posts', '.item', 'td:nth-child(4)')" style="cursor:pointer">Block</th>
            <th onclick="w3.sortHTML('#posts', '.item', 'td:nth-child(5)')" style="cursor:pointer">Delete</th>
        </tr>
        <tr class="item" id="tablerow @Model.Id">
            <td><a href="/users/details/@Model.Id">@Model.ApplicationIdentityUser.UserName</a></td>
            @if (Model.ApplicationIdentityUser.Roles.Contains("Writer"))
            {
                <td><input class="writercheckbox" id="writer @Model.Id" type="checkbox" checked="checked" /></td>
            }
            else
            {
                <td><input class="writercheckbox" id="writer @Model.Id" type="checkbox" /></td>
            }
            @if (Model.ApplicationIdentityUser.Roles.Contains("Admin"))
            {
                <td><input class="admincheckbox" id="admin @Model.Id" type="checkbox" checked="checked" /></td>
            }
            else
            {
                <td><input class="admincheckbox" id="admin @Model.Id" type="checkbox" /></td>
            }
            @if (Model.ApplicationIdentityUser.Roles.Contains("Blocked"))
            {
                <td><input class="blockbutton" id="block @Model.Id" type="button" value="Unblock" /></td>
            }
            else
            {
                <td><input class="blockbutton" id="block @Model.Id" type="button" value="Block" /></td>
            }
            <td><input class="deletebutton" id="delete @Model.Id" type="button" value="Delete" /></td>
        </tr>
    </table>
}

<h3>
    @Model.ApplicationIdentityUser.UserName
</h3>

<ul class="nav nav-tabs">
    <li class="active"><a id="navgeneral" data-toggle="tab" href="#general">General</a></li>
    <li><a id="navposts" data-toggle="tab" href="#posts">Posts</a></li>
</ul>

<div class="tab-content">
    <div id="general" class="tab-pane fade in active">
        <div id="generalcontent">
            <div>
                Username: @Model.ApplicationIdentityUser.UserName
            </div>
            <div>
                Name: @Model.Name
            </div>
            <div>
                Country: @Model.Country
            </div>
            <div>
                Date of Birth: @Model.DateOfBirth
            </div>
        </div>
    </div>
    <div id="posts" class="tab-pane fade">
        <div id="postscontent"></div>
    </div>
</div>

@section Scripts {

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script src="https://www.w3schools.com/lib/w3.js"></script>
    <script src="~/Scripts/adminusermanaging.js"></script>

    <script>
        $("#navposts").click(function (e) {
            e.preventDefault();
            $.ajax({
                url: "/Post/GetUserPosts/@Model.ApplicationIdentityUser.Id",
                success: function (viewHtml) {
                    $("#postscontent").html(viewHtml);
                }
            });
        })
    </script>

}

